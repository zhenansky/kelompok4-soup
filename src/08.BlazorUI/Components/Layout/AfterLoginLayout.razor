@inherits LayoutComponentBase
@using MudBlazor

<MudLayout>
    <MudAppBar Elevation="5" Style="background-color:#ffffff;" Class="px-2">
        <MudGrid AlignItems="Center">
            
            <!-- Logo di kiri -->
            <MudItem xs="3">
               <img src="logo.svg" alt="Logo" style="width:55px; height:55px;" />
            </MudItem>
            <MudSpacer />
            <MudItem xs="3" Class="d-flex flex-row gap-4 align-center justify-end">
                <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" Style="color:black;" Size="Size.Small" />
                <MudText Href="/" Class="nav-link" Typo="Typo.button" Style="color:black">My Class</MudText>
                <MudText Href="/shop" Class="nav-link" Typo="Typo.button" Style="color:black">Invoice</MudText>
            </MudItem>
            <MudItem Class="d-flex flex-row gap-3 align-center">
                <span class="mx-1" style="color:black; font-size:24px">|</span>
                <MudIconButton Icon="@Icons.Material.Filled.Person" Style="color:#FABC1D;" />
                <MudIconButton Icon="@Icons.Material.Filled.ExitToApp" Style="color:black" />
            </MudItem>
        </MudGrid>
    </MudAppBar>


    <!-- Konten Halaman -->
    <MudMainContent>
        <div class="p-4">
            @Body
        </div>
    </MudMainContent>

    <!-- Footer -->
    <footer>
        <MudPaper Class="footer-section" Square="true" Elevation="0">
            <MudContainer MaxWidth="MaxWidth.Large" Class="py-6 px-3">
                <MudGrid Spacing="3">
                    <!-- About Us -->
                    <MudItem xs="12" sm="6" md="4">
                        <MudText Typo="Typo.subtitle1" Class="footer-title mb-2">
                            About Us
                        </MudText>
                        <MudText Class="footer-text">
                            Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque
                            laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto
                            beatae vitae dicta sunt explicabo.
                        </MudText>
                    </MudItem>

                    <!-- Product -->
                    <MudItem xs="12" sm="6" md="4">
                        <MudText Typo="Typo.subtitle1" Class="footer-title mb-2">
                            Product
                        </MudText>
                        <MudGrid>
                            <MudItem xs="6">
                                <MudList Dense="true" T="string">
                                    <MudListItem>Electric</MudListItem>
                                    <MudListItem>LCGC</MudListItem>
                                    <MudListItem>Offroad</MudListItem>
                                    <MudListItem>SUV</MudListItem>
                                </MudList>
                            </MudItem>
                            <MudItem xs="6">
                                <MudList Dense="true" T="string">
                                    <MudListItem>Hatchback</MudListItem>
                                    <MudListItem>MPV</MudListItem>
                                    <MudListItem>Sedan</MudListItem>
                                    <MudListItem>Truck</MudListItem>
                                </MudList>
                            </MudItem>
                        </MudGrid>
                    </MudItem>

                    <!-- Address + Contact -->
                    <MudItem xs="12" sm="12" md="4">
                        <MudText Typo="Typo.subtitle1" Class="footer-title mb-2">
                            Address
                        </MudText>
                        <MudText Class="footer-text mb-3">
                            Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque.
                        </MudText>

                        <MudText Typo="Typo.subtitle1" Class="footer-title contact-title mb-2">
                            Contact Us
                        </MudText>
                        <div class="social-icons d-flex gap-2 flex-wrap">
                            <MudIconButton Icon="@Icons.Material.Filled.Phone" AriaLabel="Phone" Class="social-btn" />
                            <MudIconButton Icon="@Icons.Custom.Brands.Instagram" AriaLabel="Instagram" Class="social-btn" />
                            <MudIconButton Icon="@Icons.Material.Filled.PlayCircle" AriaLabel="YouTube" Class="social-btn" />
                            <MudIconButton Icon="@Icons.Material.Filled.Send" AriaLabel="Telegram" Class="social-btn" />
                            <MudIconButton Icon="@Icons.Material.Filled.Email" AriaLabel="Email" Class="social-btn" />
                        </div>
                    </MudItem>
                </MudGrid>
            </MudContainer>
        </MudPaper>
    </footer>
</MudLayout>

