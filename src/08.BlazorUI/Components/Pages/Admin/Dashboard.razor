@page "/admin-dashboard"
@layout AdminLayout

@using Blazored.LocalStorage
@using MyApp.BlazorUI.Services
@using MyApp.BlazorUI.Models
@using MyApp.BlazorUI.Components.Shared.Admin
@using MyApp.BlazorUI.Services.Interfaces
@using MyApp.BlazorUI.Components.Models

@inject DashboardService DashboardService
@inject InvoiceService InvoiceService
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject ILocalStorageService LocalStorage
@inject IAuthService AuthService
@inject PaymentService PaymentService

<PageTitle>Dashboard</PageTitle>

<MudPaper Class="dashboard-container" Elevation="1">
  <MudText Typo="Typo.h4" Class="welcome-text">Welcome, Admin ðŸ‘‹</MudText>

  <!-- ===== GRID STATISTICS ===== -->
  <MudGrid Spacing="2" Class="stats-grid">
    <MudItem xs="12" sm="4">
      <MudCard Class="stat-card bg-red">
        <MudCardHeader Class="stat-header">
          <MudIcon Icon="@Icons.Material.Filled.PeopleAlt" />
          <MudText Typo="Typo.body2">Total Active Users</MudText>
        </MudCardHeader>
        <MudCardContent>
          <MudText Typo="Typo.h3" Class="stat-number">@totalUsersActive</MudText>
        </MudCardContent>
      </MudCard>
    </MudItem>

    <MudItem xs="12" sm="4">
      <MudCard Class="stat-card bg-blue">
        <MudCardHeader Class="stat-header">
          <MudIcon Icon="@Icons.Material.Filled.CreditCard" />
          <MudText Typo="Typo.body2">Active Payment Methods</MudText>
        </MudCardHeader>
        <MudCardContent>
          <MudText Typo="Typo.h3" Class="stat-number">@totalPaymentMethods</MudText>
        </MudCardContent>
      </MudCard>
    </MudItem>

    <MudItem xs="12" sm="4">
      <MudCard Class="stat-card bg-purple">
        <MudCardHeader Class="stat-header">
          <MudIcon Icon="@Icons.Material.Filled.PeopleAlt" />
          <MudText Typo="Typo.body2">Total Members</MudText>
        </MudCardHeader>
        <MudCardContent>
          <MudText Typo="Typo.h3" Class="stat-number">@totalMembers</MudText>
        </MudCardContent>
      </MudCard>
    </MudItem>
  </MudGrid>

  <MudDivider Class="my-6" />

  <!-- ===== TABLE SECTION ===== -->
  <div class="table-wrapper">
    <MudTable Items="@invoices" FixedHeader="true" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading"
      LoadingProgressColor="Color.Info" Dense="true" Elevation="0" Class="invoice-table">

      <HeaderContent>
        <MudTh>Email</MudTh>
        <MudTh>Invoice No</MudTh>
        <MudTh>Date</MudTh>
        <MudTh>Total Course</MudTh>
        <MudTh>Total Price</MudTh>
        <MudTh>Action</MudTh>
      </HeaderContent>

      <RowTemplate>
        <MudTd DataLabel="Email">
          @(!string.IsNullOrWhiteSpace(context.Email) ? context.Email : "(no email)")
        </MudTd>

        <MudTd DataLabel="Invoice No">
          @context.NoInvoice
        </MudTd>

        <MudTd DataLabel="Date">
          @{
            string formattedDate = "-";

            try
            {
              if (context.Date.Year >= 1 && context.Date.Year <= 9999)
              {
                formattedDate = context.Date
                .ToLocalTime()
                .ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("id-ID"));
              }
            }
            catch
            {
              formattedDate = "-";
            }
          }
          @formattedDate
        </MudTd>

        <MudTd DataLabel="Total Course">@context.TotalCourse</MudTd>

        <MudTd DataLabel="Total Price">
          @("IDR " + context.TotalPrice.ToString("N0", new System.Globalization.CultureInfo("id-ID")))
        </MudTd>

        <MudTd DataLabel="Action">
          <MudTooltip Text="View Details">
            <MudIconButton Icon="@Icons.Material.Filled.Info" Color="Color.Primary" Size="Size.Medium"
              OnClick="@(() => OpenDialogAsync(context.InvoiceId))" />
          </MudTooltip>
        </MudTd>
      </RowTemplate>

      <PagerContent>
        <MudTablePager PageSizeOptions="new int[] { 5, 10, 25 }" />
      </PagerContent>
    </MudTable>
  </div>

</MudPaper>

@code {
  private bool _loading;
  private bool _loaded;
  private int totalUsersActive;
  private int totalMembers;
  private int totalPaymentMethods;
  private int totalInvoices;

  private List<InvoiceItem> invoices = new();

  protected override async Task OnAfterRenderAsync(bool firstRender)
  {
    if (!firstRender || _loaded) return;
    _loading = true;

    try
    {
      totalUsersActive = await DashboardService.GetTotalActiveUsersAsync();
      totalMembers = await DashboardService.GetTotalMembersAsync();

      var paymentMethods = await PaymentService.GetPaymentsAsync();
      totalPaymentMethods = paymentMethods?.Count(pm => pm.Status == PaymentStatus.Active) ?? 0;

      string? token = null;
      try
      {
        token = await LocalStorage.GetItemAsync<string>("accessToken");
      }
      catch { }

      if (!string.IsNullOrWhiteSpace(token))
      {
        invoices = await InvoiceService.GetInvoicesAsync(token);
        totalInvoices = invoices?.Count ?? 0;
      }

      _loaded = true;
    }
    catch (Exception ex)
    {
      Snackbar.Add($"Error loading dashboard: {ex.Message}", Severity.Error);
    }
    finally
    {
      _loading = false;
      StateHasChanged();
    }
  }

  private async Task OpenDialogAsync(int invoiceId)
  {
    var parameters = new DialogParameters { ["InvoiceId"] = invoiceId };
    var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
    await DialogService.ShowAsync<DetailDialog>("Detail Invoice", parameters, options);
  }
}

<style>
  /* ===== CONTAINER ===== */
  .dashboard-container {
    padding: 1.5rem;
    background-color: #fff;
    border-radius: 12px;
    min-height: calc(100vh - 5rem);
    overflow-y: auto;
  }

  .welcome-text {
    font-weight: 600;
    color: #333;
    margin-bottom: 1.5rem;
  }

  /* ===== STAT CARDS ===== */
  .stat-card {
    color: white;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    width: 100%;
  }

  .stat-header {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
    text-align: center;
  }

  .stat-number {
    text-align: center;
    font-weight: 700;
    margin: 0.5rem 0;
  }

  .bg-red {
    background: #ef4444;
  }

  .bg-blue {
    background: #3b82f6;
  }

  .bg-purple {
    background: #9333ea;
  }

  /* ===== TABLE SECTION ===== */
  .table-wrapper {
    overflow-x: auto;
    width: 100%;
  }

  .invoice-table {
    border-radius: 10px;
    border: 1px solid #e0e0e0;
  }

  .mud-table-head th {
    background-color: #e8f5e9 !important;
    font-weight: 600;
    text-transform: uppercase;
    color: #2e7d32;
    text-align: center;
  }

  .mud-table td {
    text-align: center;
    padding: 0.75rem;
  }

  /* ===== RESPONSIVE ===== */
  @@media (max-width: 1024px) {
    .dashboard-container {
      padding: 1rem;
    }
  }

  @@media (max-width: 768px) {
    .dashboard-container {
      padding: 0.75rem;
    }

    .welcome-text {
      font-size: 1.25rem;
      text-align: center;
    }

    .stats-grid {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .stat-card {
      width: 100%;
      margin: 0 auto;
    }

    .stat-number {
      font-size: 1.25rem;
    }

    /* Table stacking style */
    .invoice-table {
      min-width: 100%;
      border: none;
    }

    .mud-table thead {
      display: none;
    }

    .mud-table tr {
      display: block;
      background: #fafafa;
      margin-bottom: 1rem;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
      padding: 0.5rem;
    }

    .mud-table td {
      display: flex;
      justify-content: space-between;
      text-align: left;
      padding: 0.5rem 0.75rem;
      font-size: 0.85rem;
      border-bottom: 1px solid #eee;
    }

    .mud-table td::before {
      content: attr(datalabel);
      font-weight: 600;
      color: #444;
    }

    .mud-table td:last-child {
      border-bottom: none;
    }

    .table-wrapper {
      overflow-x: visible;
    }
  }

  @@media (max-width: 480px) {
    .welcome-text {
      font-size: 1.1rem;
    }

    .stat-number {
      font-size: 1.1rem;
    }

    .mud-table td {
      font-size: 0.8rem;
    }
  }
</style>