
@page "/"
@using MudBlazor

<!-- Hero Section -->
    <MudContainer MaxWidth="MaxWidth.Large"
                  Class="bg-hero d-flex flex-column align-items-center justify-content-center text-center min-h-350 px-3">
        <MudText Typo="Typo.h3" Class="text-white font-weight-bold mb-2">
            Be the next great chef
        </MudText>
        <MudText Typo="Typo.subtitle1" Class="text-white max-w-600">
            We are able to awaken your cooking skills to become a classy chef
            and ready to dive into the professional world
        </MudText>
    </MudContainer>

<!-- Statistic Section -->
<MudContainer MaxWidth="MaxWidth.Large" Class="py-6 px-3">
    <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Stretch" Spacing="4">
        @foreach (var stat in stats)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudCard Class="stat-card h-100">
                    <MudCardContent Class="d-flex flex-column align-items-center justify-content-center text-center p-4">
                        <MudText Typo="Typo.h4" Color="Color.Warning" Class="font-weight-bold">@stat.Number</MudText>
                        <MudText Typo="Typo.body2">@stat.Description</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

<!-- More Professional Class Section -->
<MudContainer MaxWidth="MaxWidth.False" Class="my-8">
    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-6">
        More Professional Classes
    </MudText>
    <MudGrid Spacing="4">
        @foreach (var item in Foods)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" 
                         Class="card-hover"
                         @onclick="() => OnCardClick(item)">
                    <MudCardMedia Image="@item.Image" Height="180" Alt="@item.Title" />
                    <MudCardContent>
                        <MudText Typo="Typo.caption" Color="Color.Secondary">@item.Category</MudText>
                        <MudText Typo="Typo.subtitle1">@item.Title</MudText>
                        <MudDivider Class="my-3" />
                        <MudText Typo="Typo.body2" Color="Color.Warning">@item.Price</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>


<!-- Benefit Section -->
