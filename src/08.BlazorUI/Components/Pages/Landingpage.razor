        </MudText>
    </MudContainer>
</MudPaper>

<!-- Food Type Section -->
<MudContainer MaxWidth="MaxWidth.False" Class="food-container">
    <MudText Typo="Typo.h5" Align="Align.Center" Class="title-text">
        More food type as you can choose
    </MudText>
    <!-- Foot Card -->
    <MudGrid Spacing="3" Class="food-grid">
        @foreach (var food in FoodTypes)
        {
            <MudItem xs="6" sm="3">
                <MudPaper Class="food-card">
                    <img src="@food.Image" alt="@food.Name" class="food-img" />
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="mt-4" Style="font-size:24px;">
                        @food.Name
                    </MudText>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

